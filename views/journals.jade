include layout
include index
include jumbotron
- function getDate(dateString) {
	//if it's already a date object and not a string you don't need this line:
	-var date = new Date(dateString);
	-var d = date.getDate();
	-var monthNames = [ "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" ];
	-var m = monthNames[date.getMonth()];
	-var y = date.getFullYear();
	-return d+' '+m+' '+y;
-}


block content
.container.top-padding-med
	table.table.table-hover.table-striped.table-bordered
		tr
			th.text-center Date
			th Machine
			th Directory
			th Project
			th Comments
			th.text-center Delete?
				each journal, index in journals
					tr 
						td.text-center
							a(href="/journaledit/" + journal._id + "") #{getDate(journal.timestamp)}
						td=journal.machine
						td=journal.directory
						td=journal.project
						td=journal.comments
						td.text-center
							a.button.btn.btn-danger(href="/journaldelete/" + journal._id + "") Delete